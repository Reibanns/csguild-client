{
  "name": "csguild-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"bun run dev:client\" \"bun run dev:api\"",
    "dev:client": "next dev --turbopack",
    "dev:api": "bash -c \"source ~/.nvm/nvm.sh && nvm use && convex dev\"",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "echo \"No tests specified\" && exit 0",
    "ci": "bun run type-check && bun run lint && bun run build",
    "api:generate": "docker run --rm -v ${PWD}:/local openapitools/openapi-generator-cli:v6.6.0 generate -i http://host.docker.internal:3001/api-docs-json -g typescript-axios -o /local/generated/api-client --additional-properties=npmName=csguild-api-client,npmVersion=1.0.0,supportsES6=true,withInterfaces=false,modelPropertyNaming=camelCase,enumPropertyNaming=UPPERCASE,useSingleRequestParameter=false,withSeparateModelsAndApi=true,apiPackage=api,modelPackage=models --skip-validate-spec",
    "api:generate:prod": "docker run --rm -v ${PWD}:/local openapitools/openapi-generator-cli:v6.6.0 generate -i https://csguild.tech/api-docs-json -g typescript-axios -o /local/generated/api-client --additional-properties=npmName=csguild-api-client,npmVersion=1.0.0,supportsES6=true,withInterfaces=false,modelPropertyNaming=camelCase,enumPropertyNaming=UPPERCASE,useSingleRequestParameter=false,withSeparateModelsAndApi=true,apiPackage=api,modelPackage=models --skip-validate-spec",
    "api:clean": "rm -rf ./generated/api-client",
    "api:regenerate": "bun run api:clean && bun run api:generate",
    "api:regenerate:prod": "bun run api:clean && bun run api:generate:prod"
  },
